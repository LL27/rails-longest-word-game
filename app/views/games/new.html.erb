
<h1>New game</h1>
<div class="letters">
  <% @letters.each do |letter| %>
  <p class="letter">
   <%= letter %>
  </p>
  <% end %>
</div>

<div class="form">
  <p>What is the longest word you can find?</p>
  <form action="/score" method="POST">
    <input type="text" name="word">
    <input type="hidden" name="authenticity_token"  value="<%= form_authenticity_token %>" >
  </form>
</div>
